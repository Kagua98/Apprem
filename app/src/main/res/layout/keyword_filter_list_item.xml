<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyword_title_card_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/keyword_filter_name_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyword_filter_content_padding"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            tools:text="intitle" />

        <TextView
            android:id="@+id/keyword_filter_desc_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyword_filter_content_padding"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="italic"
            tools:text="Keyword for filtering text found in Title" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>